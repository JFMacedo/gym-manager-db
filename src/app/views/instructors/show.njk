{% extends "layout.njk" %}

{% block head %}
  <title>Gym Manager - Instrutores</title>
{% endblock %}

{% block content %}
  <div id="content">
    <div class="card">
      <section class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover;">
      </section><!--avatar-->
      <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
          <div>Nome</div>
          <div>{{ instructor.name }}</div>
        </div><!--item-->
        <div class="item">
          <div>Idade</div>
          <div>{{ instructor.age }}</div>
        </div><!--item-->
        <div class="item">
          <div>Sexo</div>
          <div>{{ "Masculino" if instructor.gender == "M" else "Feminino" }}</div>
        </div><!--item-->
        <div class="item">
          <div>Atendimentos</div>
          <div>
            {% for service in instructor.services %}
              <span>{{ service }}</span>
            {% endfor %}
          </div>
        </div><!--item-->
        <div class="item">
          <div>Desde</div>
          <div>{{ instructor.created_at }}</div>
        </div><!--item-->

        <a href="/instructors/{{ instructor.id }}/edit" class="button">Editar</a>
      </section><!--details-->
    </div><!--card-->
  </div><!--page-instructors-->
{% endblock %}