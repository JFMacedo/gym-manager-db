{% extends "layout.njk" %}

{% block head %}
  <title>Gym Manager - Membros</title>
{% endblock %}

{% block content %}
  <div id="content">
    <div class="card table-container">
      <div class="header">
        <a class="button" href="/members/create">Novo</a>
        <form action="/members" method="GET">
          <input type="text" name="filter" placeholder="Nome ou atendimento" value="{{ filter }}">
          <input type="submit" value="Filtrar">
        </form>
      </div>
      <table width="100%">
        <thead>
          <tr>
            <td>Membro</td>
            <td>Altura</td>
            <td>Peso</td>
            <td>Ação</td>
          </tr>
        </thead>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{ member.avatar_url }})"></span>
              {{ member.name }}
            </td>
            <td>{{ member.height }}cm</td>
            <td>{{ member.weight }}kg</td>
            <td><a href="/members/{{ member.id }}">Ver</a></td>
          </tr>
        {% endfor %}
      </table>
    </div><!--card-->
  </div><!--page-instructors-->
{% endblock %}